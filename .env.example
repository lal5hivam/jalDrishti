# ============================================
# JalDrishti - Environment Variables
# ============================================
# Copy this file to .env and configure for your environment

# ==========================================
# Backend API Configuration
# ==========================================

# Server settings
API_PORT=8000
API_HOST=0.0.0.0
API_WORKERS=4

# CORS Origins (comma-separated)
# Add your frontend domains here
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,https://jaldrishti.example.com

# Data directory (relative to app root)
DATA_DIR=./output

# Cache settings
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600

# ==========================================
# Frontend Configuration
# ==========================================

# API URL for frontend to connect to backend
# In development: http://localhost:8000
# In production: https://api.jaldrishti.example.com
NEXT_PUBLIC_API_URL=http://localhost:8000

# ==========================================
# Docker Configuration
# ==========================================

# Docker image tags
DOCKER_TAG=latest
DOCKER_REGISTRY=

# ==========================================
# Production Settings
# ==========================================

# Domain configuration
DOMAIN=jaldrishti.example.com
API_DOMAIN=api.jaldrishti.example.com

# SSL/TLS (for nginx)
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem

# Logging
LOG_LEVEL=INFO
